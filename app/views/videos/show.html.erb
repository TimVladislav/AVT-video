<div class="bg-nav"></div>
<div class="m-top rel container">
<% if @adm %>
  <div class="edit-video-btn fixed-action-btn horizontal">
    <a class="btn-floating btn-large red">
      <i class="large material-icons">menu</i>
    </a>
    <ul>
      <li><a data-confirm="Удалить '<%= @video.title %>'" rel="nofollow" data-method="delete" href="/videos/<%= @video.id %>" class="btn-floating red darken-1"><i class="material-icons">delete_forever</i></a></li>
      <li><a href="/videos/<%= @video.id %>/edit" class="btn-floating yellow darken-1"><i class="material-icons">edit</i></a></li>
      <li><a href="<%= @save  %>" class="btn-floating blue darken-1"><i class="material-icons">file_download</i></a></li>
    </ul>
  </div>
<% end %>
  <div class="col s12 m12 l6">
  <div class="card">
    <div class="card-image">
      <iframe width="100%" height="500" src="<%= @video.content %>" frameborder="0" allowfullscreen></iframe>    
    </div>
    <div class="card-content">
      <p><%= @video.title %></p>
    </div>
  </div>
  </div>
</div>
